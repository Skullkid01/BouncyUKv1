@model IEnumerable<BouncyUKv1.Models.Book>

@{
    ViewBag.Title = "Recorded Bookings";
}
<style>
    .myDiv {
        border: 5px outset blue;
        background-color: white;
    }
</style>
<center><h2><font color="white">Recorded Bookings</font></h2></center>
@using (Html.BeginForm("AllBooking", "UserAccounts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="myDiv">
        <table align="center">

            <tr>

                <td>
                    @Html.TextBox("refer", null, new { @class = "form-control", @autocomplete = "off", placeholder = "Search By Reference" })
                </td>
                <td>
                    <input type="submit" value="Search" class="btn btn-primary btn-sm"> <input type="button" class="btn btn-primary btn-sm" value="Clear" onclick="location.href='@Url.Action("AllBooking", "UserAccounts")'" />
                </td>

            </tr>
        </table>
        <br />
        <br />
        <br />
        <table class="table table-bordered table-responsive table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BookingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliverAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cell)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PayMtd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Refer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalCost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Booking)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliverAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cell)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayMtd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Refer)
                    </td>
                    <td>
                        £ @Html.DisplayFor(modelItem => item.TotalCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Booking)
                    </td>
                </tr>
            }

        </table>
    </div>
}
@if (Model.Count() == 0)
{
    <div class="alert alert-dismissible alert-danger">
        <button class="close" type="button" data-dismiss="alert">&times;</button>
        <strong>Booking Does Not Exist.Please enter a valid Booking Reference.</strong>
    </div>
}

