@model BouncyUKv1.Models.Contact
@{
    ViewBag.Title = "Contact Us";
}

<style>

    .myDiv {
        border: 5px outset blue;
        background-color: white;
</style>
<center><h2><font color="white">Contact Us</font></h2></center>
<div class="myDiv">
    <br />

    <fieldset>
        @using (Html.BeginForm())
        {

            
        <div class="form-horizontal">
        
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Name, new { @placeholder = "Name", @autocomplete = "off" })
                    </div>
                </div>
                <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.Email, new { @placeholder = "Email Address", @autocomplete = "off" })
                        </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CellPhone, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.CellPhone, new { @placeholder = "Cell Number", @autocomplete = "off" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Message, new { @placeholder = "Message", @autocomplete = "off" })
                    </div>
                </div>

                <div class="button-wrapper">
                    <center> <input type="submit" value="Send Enquiry" name="submit" class="btn btn-primary btn-lg btn-block"></center>
                </div>
    
        </div>
        
        }
    </fieldset>
    <br />
</div>


